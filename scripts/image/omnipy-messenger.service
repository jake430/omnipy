[Unit]
Description=Omnipy Messenger
After=network.target
StartLimitIntervalSec=0


[Service]
ExecStart=/home/pi/v/bin/python -u /home/pi/omnipy/omnipy_messenger_service.py
WorkingDirectory=/home/pi/omnipy
StandardOutput=inherit
StandardError=inherit
TimeoutStopSec=15
Restart=on-failure
RestartSec=1
User=pi

[Install]
WantedBy=multi-user.target
